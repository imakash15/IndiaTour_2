<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="we3infotech.indiatour.com.indiatour.MainActivity"
    tools:showIn="@layout/app_bar_main">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/tvmp"
        android:text="Madhya Pradesh"
        android:textColor="@android:color/white"
        android:background="@drawable/mp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:padding="10dp"/>

            <TextView
                android:id="@+id/tvgujrat"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/gujrat"
                android:padding="10dp"
                android:text="Gujarat"
                android:textSize="30dp"
                android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/raj"
        android:text="Rajasthan"
        android:id="@+id/tvrj"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/tvdelhi"
                android:text="Delhi"
                android:textColor="@android:color/white"
                android:background="@drawable/delhi"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_margin="5dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/tvoddisa"
                android:textColor="@android:color/white"
                android:background="@drawable/oddisa"
                android:text="Oddisha"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_margin="5dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/tvwb"
                android:text="West Bangal"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/west"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_margin="5dp"
                android:padding="10dp"/>

            <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:text="Jammu and
Kashmir"
        android:gravity="center"
        android:id="@+id/tvjandk"
        android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/jk"
                android:textSize="30dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Himachal Pradesh"
        android:gravity="center"
        android:id="@+id/tvhp"
        android:textColor="@android:color/white"
        android:background="@drawable/hp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:text="Uttarakhand"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/uk"
        android:textStyle="bold"
        android:id="@+id/tvuk"
        android:textSize="30dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Maharashtra"
        android:id="@+id/tvmh"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/maharastra"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Uttar Pradesh"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/up"
        android:id="@+id/tvup"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:text="Assam"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/assam"
        android:id="@+id/tvassam"
        android:textStyle="bold"
        android:textSize="30dp"
        android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textColor="@android:color/white"
                android:background="@drawable/haryana"
                android:layout_margin="5dp"
                android:text="Haryana"
                android:gravity="center"
                android:id="@+id/tvharyana"
                android:textStyle="bold"
                android:textSize="30dp"
                android:padding="10dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
