        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/itlogo"
        android:id="@+id/logo"
        android:layout_marginBottom="60dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
